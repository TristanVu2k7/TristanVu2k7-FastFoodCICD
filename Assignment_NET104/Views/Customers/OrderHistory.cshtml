@model IEnumerable<Assignment_NET104.Models.Order>

<h1>Lịch sử đơn hàng</h1>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Ngày đặt</th>
            <th>Trạng thái</th>
            <th>Tổng tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.Status</td>
                <td>@order.OrderDetails.Sum(d => d.Price * d.Quantity).ToString("N0") VNĐ</td>
            </tr>
        }
    </tbody>
</table>
