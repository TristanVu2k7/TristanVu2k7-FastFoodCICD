@model FoodItem
@{
    ViewData["Title"] = "Xóa món ăn";
}

<h1>Bạn muốn xóa món ăn không?</h1>
<div>
    <h4>@Model.Name</h4>
    <p>Giá: @Model.Price</p>
    <p>Danh mục: @Model.Category?.Name</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn-danger">Xác nhận xóa</button>
</form>
