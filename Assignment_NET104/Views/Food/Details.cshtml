@using System.Security.Claims
@model FoodItem
@{
    ViewData["Title"] = "Chi tiết món ăn";
}

<h2>@Model.Name</h2>
@if (!string.IsNullOrEmpty(Model.ImagePath))
{
    <img src="@Model.ImagePath" alt="@Model.Name" style="max-width:300px;max-height:200px;" />
}
<p>Giá: @Model.Price.ToString("N0") VNĐ</p>
<p>Danh mục: @Model.Category?.Name</p>

<a asp-page="/Food/Index" class="btn btn-secondary">Quay lại thực đơn</a>

